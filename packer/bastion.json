{
  "builders": [
    {
      "region": "ap-northeast-2",
      "type": "amazon-ebs",
      "availability_zone": "ap-northeast-2a",
      "source_ami": "ami-00ec0bddfbdd6e1c1",
      "instance_type": "c5.2xlarge",
      "ssh_username": "ec2-user",
      "ami_name": "bastion {{ isotime | clean_resource_name }}",
      "ami_description": "squaaat bastion server",
      "ssh_interface": "public_ip",
      "associate_public_ip_address": true
    }
  ],
  "variables": {
    "github_accounts": "drake-jin,zynkn"
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./provisionings/bastion.yml",
      "host_alias": "squaaat_bastion",
      "extra_arguments": [
        "--extra-vars",
        "github_accounts={{user `github_accounts`}}"
      ]
    }
  ]
}